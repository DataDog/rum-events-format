{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "telemetry/usage/mobile-features-schema.json",
  "title": "TelemetryMobileFeaturesUsage",
  "type": "object",
  "description": "Schema of mobile specific features usage",
  "oneOf": [
    {
      "required": ["feature", "no_view", "no_active_view", "overwritten"],
      "title": "AddViewLoadingTime",
      "properties": {
        "feature": {
          "type": "string",
          "description": "addViewLoadingTime API",
          "const": "addViewLoadingTime"
        },
        "no_view": {
          "type": "boolean",
          "description": "Whether the view is not available"
        },
        "no_active_view": {
          "type": "boolean",
          "description": "Whether the available view is not active"
        },
        "overwritten": {
          "type": "boolean",
          "description": "Whether the loading time was overwritten"
        }
      }
    },
    {
      "required": ["feature"],
      "title": "TrackWebView",
      "properties": {
        "feature": {
          "type": "string",
          "description": "trackWebView API",
          "const": "trackWebView"
        }
      }
    },
    {
      "required": ["feature", "type"],
      "title": "AndroidNetworkInstrumentation",
      "properties": {
        "feature": {
          "type": "string",
          "description": "Android network instrumentation",
          "const": "api_usage"
        },
        "type": {
          "type": "string",
          "description": "The network instrumentation API used",
          "enum": ["CRONET", "OKHTTP"]
        }
      }
    }
  ]
}
