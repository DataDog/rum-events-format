{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "text-wireframe-schema.json",
  "title": "TextWireframe",
  "type": "object",
  "description": "Schema of all properties of a TextWireframe.",
  "allOf": [
    {
      "$ref": "_common-shape-wireframe-schema.json"
    },
    {
      "required": [
        "text"
      ],
      "properties": {
        "type": {
          "type": "string",
          "description": "The type of the wireframe.",
          "const": "text",
          "readOnly": true
        },
        "text": {
          "type": "string",
          "description": "The text value of the wireframe.",
          "readOnly": false
        },
        "textStyle": {
          "type": "object",
          "description": "The style of this text field.",
          "required": [
            "family",
            "font",
            "color"
          ],
          "properties": {
            "family": {
              "type": "string",
              "description": "The font family.",
              "readOnly": true
            },
            "font": {
              "type": "integer",
              "description": "The font size.",
              "readOnly": true
            },
            "color": {
              "type": "string",
              "description": "The font color as a string hexadecimal.",
              "readOnly": true
            }
          },
          "readOnly": true
        },
        "textPosition": {
          "type": "object",
          "description": "The position of the text in the wireframe.",
          "required": [
            "alignment",
            "padding"
          ],
          "properties": {
            "padding": {
              "type": "object",
              "required": [
                "top",
                "bottom",
                "left",
                "right"
              ],
              "properties": {
                "top": {
                  "type": "integer",
                  "description": "The top padding.",
                  "readOnly": true,
                  "default": 0
                },
                "bottom": {
                  "type": "integer",
                  "description": "The bottom padding.",
                  "readOnly": true,
                  "default": 0
                },
                "left": {
                  "type": "integer",
                  "description": "The left padding.",
                  "readOnly": true,
                  "default": 0
                },
                "right": {
                  "type": "integer",
                  "description": "The right padding.",
                  "readOnly": true,
                  "default": 0
                }
              }
            },
            "alignment": {
              "type": "object",
              "required": [
                "horizontal",
                "vertical"
              ],
              "properties": {
                "horizontal": {
                  "type": "string",
                  "description": "The horizontal text alignment.",
                  "enum": [
                    "left",
                    "right",
                    "center"
                  ],
                  "readOnly": true,
                  "default": "left"
                },
                "vertical": {
                  "type": "string",
                  "description": "The vertical text alignment.",
                  "enum": [
                    "top",
                    "bottom",
                    "center"
                  ],
                  "readOnly": true,
                  "default": "top"
                }
              }
            }
          }
        }
      }
    }
  ]
}
