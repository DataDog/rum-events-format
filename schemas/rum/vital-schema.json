{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "rum/vital-schema.json",
  "title": "RumVitalEvent",
  "type": "object",
  "description": "Schema of all properties of a Vital event",
  "oneOf": [
    {
      "allOf": [
        {
          "$ref": "_common-schema.json"
        },
        {
          "$ref": "_view-container-schema.json"
        },
        {
          "$ref": "_vital-common-internal-schema.json"
        },
        {
          "required": ["type", "vital", "view"],
          "properties": {
            "type": {
              "type": "string",
              "description": "RUM event type",
              "const": "vital",
              "readOnly": true
            },
            "vital": {
              "oneOf": [
                {
                  "$ref": "vital-duration-schema.json"
                },
                {
                  "$ref": "vital-feature-operation-schema.json"
                }
              ],
              "readOnly": true
            }
          }
        }
      ]
    },
    {
      "allOf": [
        {
          "$ref": "_common-schema.json"
        },
        {
          "$ref": "_view-container-schema.json"
        },
        {
          "$ref": "_vital-common-internal-schema.json"
        },
        {
          "required": ["type", "vital"],
          "properties": {
            "type": {
              "type": "string",
              "description": "RUM event type",
              "const": "vital",
              "readOnly": true
            },
            "vital": {
              "oneOf": [
                {
                  "$ref": "vital-app-launch-schema.json"
                }
              ],
              "readOnly": true
            },
            "view": {
              "$ref": "_common-schema.json#/properties/view"
            }
          }
        }
      ]
    }
  ]
}
