{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "rum/vital-schema.json",
  "title": "RumVitalEvent",
  "type": "object",
  "description": "Schema of all properties of a Vital event",
  "allOf": [
    {
      "$ref": "_common-schema.json"
    },
    {
      "$ref": "_view-container-schema.json"
    },
    {
      "required": ["type", "vital"],
      "properties": {
        "type": {
          "type": "string",
          "description": "RUM event type",
          "const": "vital",
          "readOnly": true
        },
        "vital": {
          "oneOf": [
            {
              "$ref": "vital-duration-schema.json"
            },
            {
              "$ref": "vital-app-launch-schema.json"
            },
            {
              "$ref": "vital-operation-step-schema.json"
            }
          ],
          "readOnly": true
        },
        "_dd": {
          "type": "object",
          "description": "Internal properties",
          "properties": {
            "profiling": {
              "type": "object",
              "description": "Profiling context",
              "allOf": [{ "$ref": "./_profiling-internal-context-schema.json" }]
            }
          },
          "readOnly": true
        }
      }
    }
  ]
}
