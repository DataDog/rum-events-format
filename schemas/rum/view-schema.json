{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "rum/view-schema.json",
  "title": "RumViewEvent",
  "type": "object",
  "description": "Schema of all properties of a View event",
  "allOf": [
    {
      "$ref": "_common-schema.json"
    },
    {
      "$ref": "_view-container-schema.json"
    },
    {
      "$ref": "_stream-schema.json"
    },
    {
      "$ref": "_view-properties.json"
    },
    {
      "required": ["type", "_dd"],
      "properties": {
        "type": {
          "type": "string",
          "description": "RUM event type",
          "const": "view",
          "readOnly": true
        },
        "_dd": {
          "type": "object",
          "description": "Internal properties",
          "required": ["document_version"],
          "properties": {
            "document_version": {
              "type": "integer",
              "description": "Version of the update of the view event",
              "minimum": 0,
              "readOnly": true
            }
          },
          "readOnly": true
        }
      }
    }
  ]
}
