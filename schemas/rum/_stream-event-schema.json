{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "rum/_stream-event-schema.json",
  "title": "StreamEventSchema",
  "type": "object",
  "description": "Stream event schema for events that are associated to a stream",
  "required": ["stream"],
  "properties": {
    "stream": {
      "type": "object",
      "description": "Stream properties",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "description": "UUID of the stream",
          "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}$",
          "readOnly": true
        }
      },
      "readOnly": true
    }
  }
}
